module Mdiary

  module DiaryConfig

    def default_n
      7
    end
    def default_title
      'New Title'
    end
    def default_file_count
      90
    end
    def data_dir
      'path/to/yourdir'
    end
    def text_dir
      'path/to/yourdir/days'
    end
    def trash_dir
      'path/to/yourdir/trash'
    end

  end

end

$MDIARYCONF = Mdiary::DiaryConfig
